@page
@model StudentInfoApp.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Course Details</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].LectureName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LectureName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CourseKey">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CourseKey">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CourseKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
